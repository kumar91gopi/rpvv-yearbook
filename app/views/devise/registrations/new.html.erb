<div class="row"> 
  <div class="col s6 offset-s3">
    <div class="card-panel hoverable">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="input-field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        
        <div class="input-field">
          <%= f.select(:user_type, User.user_types.keys.map {|user_type| [user_type.titleize,user_type]}) %>
        </div>
        
        <div class="field">
          <%= f.label :school_id %><br />
          <%= f.select :school_id, options_from_collection_for_select(School.order(:name), :id, :name ) %>
        </div>

        <div class="input-field">
        <%= f.radio_button :gender, "m"  %>
          <%= f.label :gender_m, "Male" %><br/>
          <%= f.radio_button :gender, "f" %>
          <%= f.label :gender_f, "Female" %>
          <br/>
        </div>
        
        
        <div class="input-field">
          <%= f.label :date_of_birth %><br />
          <%=f.date_field(:date_of_birth, :class => "datepicker")%>
        </div>
        
       
   
        <div class="input-field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      
        <div class="input-field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      
        <div class="input-field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      
        <div class="actions">
<%
=begin %>
          <%= f.submit "Sign up" ,class: "btn waves-effect waves-light" %>
<%
=end %>

          <button class="btn waves-effect waves-light" type="submit" name="commit">Sign Up</button>
        </div>
        
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>