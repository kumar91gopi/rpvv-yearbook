<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col s8 offset-s2 ">
    <h1>Schools</h1>
    
    <ul class="collection">
    
      <tbody>
        <% @schools.each do |school| %>
          <li class="collection-item">
            <span class="title"><h5><%= school.name.to_s.titleize %></h5></span>
            <p><%= school.address %><br/>
               <%= school.school_email %><br/>
               <%= school.phone_number %><br/>
               <%= link_to 'View', school , {:class => "secondary-content waves-effect waves-light btn"}%><br/>
              
            </p>
          </li>
        <% end %>
    
    <br>
    
    </ul>
    
    <%= link_to 'Add your School', new_school_path,{:class => "waves-effect waves-light btn"} %>

 </div>
</div>
